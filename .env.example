# Configuración de Vercel KV Database
# Obtén estos valores desde tu dashboard de Vercel después de crear una KV database

# URL de la API REST de Vercel KV
KV_REST_API_URL=https://example-kv-store.upstash.io

# Token de autenticación para Vercel KV
KV_REST_API_TOKEN=your_token_here

# Configuración de la aplicación
NODE_ENV=development
PORT=3000

# URLs de la aplicación (para CORS y redirecciones)
APP_URL=http://localhost:3000
PRODUCTION_URL=https://your-domain.vercel.app

# Configuración de seguridad
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.vercel.app

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de emails (opcional para futuras mejoras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuración de notificaciones (opcional)
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Configuración de analytics (opcional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Configuración de logs
LOG_LEVEL=info
LOG_FORMAT=json

# Configuración de cache
CACHE_TTL=300

# Configuración específica para olimpiadas
MAX_PARTICIPANTS_PER_CATEGORY=50
REGISTRATION_DEADLINE=2025-05-01T23:59:59Z
COMPETITION_START_DATE=2025-05-15T09:00:00Z

# Configuración de archivos
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Feature flags (para activar/desactivar funcionalidades)
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_EXPORT_FUNCTIONALITY=true

# Configuración de backup (opcional)
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Configuración de desarrollo
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false

# Configuración de integración con otras APIs
GITHUB_TOKEN=ghp_your_token_here
CALENDAR_API_KEY=your_calendar_api_key

# Configuración de moderación de contenido
ENABLE_CONTENT_MODERATION=true
BANNED_WORDS=spam,inappropriate,test

# Configuración de métricas
ENABLE_PERFORMANCE_MONITORING=true
METRICS_ENDPOINT=https://your-metrics-service.com/api

# Configuración de la base de datos
DB_CONNECTION_TIMEOUT=10000
DB_RETRY_ATTEMPTS=3
DB_POOL_SIZE=10

# Configuración de sesiones
SESSION_SECRET=your-very-secure-session-secret-here
SESSION_DURATION=86400000

# Configuración de CORS
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Configuración de compresión
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Configuración de SSL/TLS
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000